<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/secondaryColor"
            android:padding="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryTextColor"
            android:textSize="20dp"
            android:text="Test"
            android:layout_centerHorizontal="true"
            android:id="@+id/txt_my_quiz_title"/>
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_delete"
                android:visibility="invisible"
                android:id="@+id/img_btn_quiz_delete"
                android:background="@color/secondaryColor"
                android:layout_marginStart="100dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_done"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@id/txt_my_quiz_title"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score obtained: "
                android:layout_below="@id/txt_my_quiz_title"
                android:id="@+id/txt_my_quiz_score_prefix"
                android:textColor="@color/primaryTextColor"
                android:layout_marginTop="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryTextColor"
                android:layout_below="@+id/txt_my_quiz_title"
                android:layout_toEndOf="@id/txt_my_quiz_score_prefix"
                android:text="5"
                android:layout_marginTop="15dp"
                android:id="@+id/txt_my_quiz_score"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Questions: "
                android:layout_below="@id/txt_my_quiz_title"
                android:textColor="@color/primaryTextColor"
                android:id="@+id/txt_my_quiz_difficulty_prefix"
                android:layout_toEndOf="@+id/txt_my_quiz_score"
                android:layout_marginStart="150dp"
                android:layout_marginTop="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryTextColor"
                android:layout_below="@id/txt_my_quiz_title"
                android:layout_toEndOf="@id/txt_my_quiz_difficulty_prefix"
                android:text="Easy"
                android:layout_marginTop="15dp"
                android:id="@+id/txt_my_quiz_question_count"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>